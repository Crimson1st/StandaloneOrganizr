<Window x:Class="StandaloneOrganizr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StandaloneOrganizr" 
        Height="350" Width="525" 
        WindowStartupLocation="CenterScreen">

    <Grid FocusManager.FocusedElement="{Binding ElementName=searchbox}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="139*"/>
        </Grid.RowDefinitions>


        <TextBox x:Name="searchbox" 
                 Grid.Row="0" Grid.Column="0" 
                 Margin="2" 
                 TextChanged="searchbox_TextChanged" 
                 FontSize="24" VerticalAlignment="Center"/>
        
        <ScrollViewer 
        	Grid.Row="1" Grid.Column="0" 
        	Margin="2" VerticalScrollBarVisibility="Auto">

            <ListBox x:Name="resultlist" 
        		MouseDoubleClick="resultlist_MouseDoubleClick"
        		FontSize="24" Background="{x:Null}" BorderBrush="{x:Null}" Height="276" Width="513" MouseRightButtonUp="resultlist_MouseRightButtonUp"/>
        </ScrollViewer>
    </Grid>
</Window>
